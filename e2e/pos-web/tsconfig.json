{
	"extends": "../../tsconfig.json",

	"exclude": [
		"dist",
		"test-artifacts",
		"playwright-report",
		"allure-report",
		"playwright.config.ts"
	],

	"compilerOptions": {
		"incremental": true,

		"rootDir": "src",
		"baseUrl": "src",

		"lib": ["ESNext", "DOM"],

		"paths": {
			"#env": ["env.ts"],
			"#const": ["const.ts"],
			"#typings": ["typings.ts"],

			"~/*": ["*"]
		}
	}
}
