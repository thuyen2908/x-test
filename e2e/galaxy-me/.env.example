# =============================================================================
# Galaxy Me E2E Testing - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env with real credentials to version control

# -----------------------------------------------------------------------------
# Application Identifiers
# -----------------------------------------------------------------------------
APP_PACKAGE_ANDROID=com.xsofts.galaxyme
APP_ACTIVITY_ANDROID=.MainActivity
APP_BUNDLE_IOS=com.xsofts.galaxyme

# -----------------------------------------------------------------------------
# Test Environment
# -----------------------------------------------------------------------------
TEST_ENV=dev
BASE_URL=https://dev-api.galaxyme.com

# -----------------------------------------------------------------------------
# Test Credentials (Use dedicated test accounts only)
# -----------------------------------------------------------------------------
TEST_USER_EMAIL=test.customer@galaxyme.com
TEST_USER_PASSWORD=Test@1234

ADMIN_EMAIL=admin@galaxyme.com
ADMIN_PASSWORD=Admin@1234

TECHNICIAN_EMAIL=tech@galaxyme.com
TECHNICIAN_PASSWORD=Tech@1234

# -----------------------------------------------------------------------------
# Appium Server Configuration
# -----------------------------------------------------------------------------
APPIUM_HOST=localhost
APPIUM_PORT=4723

# -----------------------------------------------------------------------------
# Android Device Configuration
# -----------------------------------------------------------------------------
ANDROID_DEVICE_NAME=Android Emulator
ANDROID_VERSION=13
ANDROID_PLATFORM_VERSION=13.0

# -----------------------------------------------------------------------------
# iOS Device Configuration
# -----------------------------------------------------------------------------
IOS_DEVICE_NAME=iPhone 15
IOS_VERSION=17.0
IOS_PLATFORM_VERSION=17.0

# -----------------------------------------------------------------------------
# Test Execution Settings
# -----------------------------------------------------------------------------
TEST_TIMEOUT=30000
PAGE_LOAD_TIMEOUT=60000
IMPLICIT_WAIT=5000
EXPLICIT_WAIT=30000

# -----------------------------------------------------------------------------
# Reporting Configuration
# -----------------------------------------------------------------------------
SCREENSHOT_ON_FAILURE=true
ALLURE_RESULTS_DIR=./allure-results
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# CI/CD Configuration
# -----------------------------------------------------------------------------
CI=false
PARALLEL_TESTS=1

# -----------------------------------------------------------------------------
# Cloud Testing (BrowserStack)
# -----------------------------------------------------------------------------
# Uncomment and fill in if using BrowserStack
# BROWSERSTACK_USERNAME=your_username
# BROWSERSTACK_ACCESS_KEY=your_access_key

# -----------------------------------------------------------------------------
# Cloud Testing (Sauce Labs)
# -----------------------------------------------------------------------------
# Uncomment and fill in if using Sauce Labs
# SAUCELABS_USERNAME=your_username
# SAUCELABS_ACCESS_KEY=your_access_key

# -----------------------------------------------------------------------------
# Optional: Network Configuration
# -----------------------------------------------------------------------------
# PROXY_HOST=
# PROXY_PORT=
# PROXY_USERNAME=
# PROXY_PASSWORD=
