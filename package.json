{
	"name": "@x-test/mono",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"author": "tech@xsofts.vn",
	"packageManager": "pnpm@9.15.3",
	"engineStrict": true,
	"engines": {
		"node": "^20 || ^22",
		"pnpm": ">=9.0.0",
		"playwright": ">=1.0.0 <2.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:thuyen2908/x-test.git"
	},
	"contributors": [
		{
			"name": "Thuyen Nguyen",
			"email": "thuyen.nguyen@xsofts.vn"
		}
	],
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"workspaces": ["packages/*", "e2e/*"],
	"scripts": {
		"cz": "cz",
		"check": "biome check --write",
		"clean": "turbo clean && rimraf .turbo",
		"typecheck": "turbo typecheck",
		"playwright:install-browsers": "pnpm dlx playwright install --with-deps",
		"build": "turbo build",
		"e2e:test": "turbo test --filter='./e2e/*'"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"@commitlint/types": "^19.5.0",
		"@x-test/toolchains": "workspace:*",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"lefthook": "^1.10.3",
		"rimraf": "^6.0.1",
		"turbo": "^2.3.3",
		"typescript": "^5.7.3"
	}
}
