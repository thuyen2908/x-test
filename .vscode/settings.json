{
	"search.exclude": {
		"**/.pnp.*": true
	},

	"editor.formatOnSave": true,
	"editor.formatOnSaveMode": "file",
	"editor.defaultFormatter": "biomejs.biome",
	"editor.codeActionsOnSave": {
		"source.organizeImports.biome": "explicit",
		"source.fixAll.biome": "explicit"
	},

	"typescript.enablePromptUseWorkspaceTsdk": false,
	"typescript.tsdk": "node_modules/typescript/lib",

	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[css]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[graphql]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[cucumber]": {
		"editor.defaultFormatter": "alexkrechik.cucumberautocomplete"
	},

	"cucumberautocomplete.strictGherkinValidation": true,
	"cucumberautocomplete.strictGherkinCompletion": true,
	"cucumberautocomplete.pureTextSteps": true,
	"cucumberautocomplete.smartSnippets": true,
	"cucumberautocomplete.stepsInvariants": true,
	"cucumberautocomplete.steps": [
		"e2e/**/features/**/*.ts",
		"e2e/**/steps/**/*.ts"
	],
	"cucumberautocomplete.customParameters": [
		{
			"parameter": "{pageId}",
			"value": "(HOME|LOGIN|TICKET_VIEW|CREATE_WAITING|WAITING_LIST|GIFT_CARD_BALANCE|LOYALTY_BALANCE|CLOSED_TICKETS|APPOINTMENT|TICKET_ADJUSTMENT|PAYROLL|TURN_DETAILS|TICKET_PAYMENTS|EMPLOYEES|EMPLOYEES_CREATE|CATEGORIES|PRODUCTS|TAX|DISCOUNT|DEPARTMENT|VOID_REASONS|APPOINTMENT_COLOR|APPOINTMENT_TYPES|CUSTOMERS|CLOSE_OUT|CLOCK_IN_OTHERS|CASH_IN_OUT|WAIT_LOG|APPOINTMENT_LOG|ACTIVITY_LOG|SMS_LOG|RUN_LOG|CONNECTION_LOG|QUICK_PAYROLL|CASH_IN_OUT|MANAGER_TIMESHEET|ONLINE_GIFT_CARD_INVENTORY|PAID_ONLINE_GIFT_CARD|DISCOUNT_CREATE)"
		},
		{
			"parameter": "{timesheetAction}",
			"value": "(in|out)"
		}
	]
}
